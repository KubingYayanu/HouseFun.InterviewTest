<h2>Customer</h2>

<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>CustomerID</th>
            <th>CompanyName</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(function () {
            var table = $("#customers").DataTable({
                ajax: {
                    url: "/api/customer/getcustomers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "customerID",
                        render: function (data, type, customer) {
                            return "<a href='/customer/edit/" + customer.customerID + "'>" + customer.customerID + "</a>";
                        }
                    },
                    {
                        data: "companyName"
                    },
                    {
                        data: "address"
                    }
                ]
            });
        });
    </script>

}